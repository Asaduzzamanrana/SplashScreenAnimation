<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/blackid"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/black" />

        <View
            android:id="@+id/greenid"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/green"
            android:layout_toRightOf="@id/blackid"/>

        <View
            android:id="@+id/redid"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:background="@drawable/red"
            android:layout_toRightOf="@id/greenid"/>

        <View
            android:id="@+id/blueid"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:background="@drawable/blue"
            android:layout_toRightOf="@id/redid"/>

        <View
            android:id="@+id/fiveid"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:background="@drawable/black"
            android:layout_toRightOf="@id/blueid"/>

        <View
            android:id="@+id/sixid"
            android:layout_width="20dp"
            android:layout_height="280dp"
            android:background="@drawable/red"
            android:layout_toRightOf="@id/fiveid"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rtextid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:textSize="150dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="#FFC107"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/sloganid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:text="Android Developer"/>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>